---
import { siteData } from "../data/siteData";
import logoImage from "../images/ulul-ilmi-logo-alt-colored.png";

const currentYear = new Date().getFullYear();
---

<footer
  class="bg-white border-t border-[#E5EBE7] pt-20 pb-12 relative overflow-hidden"
>
  <!-- Decorative Background Text -->
  <div class="footer-bg-text">ULUL ILMI</div>

  <div class="max-w-7xl mx-auto px-6 lg:px-12 relative z-10">
    <div class="grid lg:grid-cols-2 gap-16 lg:gap-24 mb-16">
      <!-- Column 1: Brand & Description -->
      <div>
        <img
          src={logoImage.src}
          alt={`${siteData.name} Logo`}
          class="h-16 w-auto mb-8 object-contain"
          width={logoImage.width}
          height={logoImage.height}
        />
        <p class="text-[#4A5D52] text-base max-w-md leading-relaxed mb-8">
          {siteData.description}
        </p>
        <div class="flex space-x-5">
          <a
            href={siteData.socialLinks.instagram}
            class="w-10 h-10 border border-[#E5EBE7] rounded-lg flex items-center justify-center text-[#4A5D52] hover:bg-[#0F4A2A] hover:text-white transition shadow-sm"
            aria-label="Instagram"
          >
            <i class="fab fa-instagram"></i>
          </a>
          <a
            href={siteData.socialLinks.whatsapp}
            class="w-10 h-10 border border-[#E5EBE7] rounded-lg flex items-center justify-center text-[#4A5D52] hover:bg-[#0F4A2A] hover:text-white transition shadow-sm"
            aria-label="WhatsApp"
          >
            <i class="fab fa-whatsapp"></i>
          </a>
          <a
            href={siteData.socialLinks.facebook}
            class="w-10 h-10 border border-[#E5EBE7] rounded-lg flex items-center justify-center text-[#4A5D52] hover:bg-[#0F4A2A] hover:text-white transition shadow-sm"
            aria-label="Facebook"
          >
            <i class="fab fa-facebook-f"></i>
          </a>
        </div>
      </div>

      <!-- Column 2: Newsletter & Contact -->
      <div>
        <!-- Newsletter -->
        <h5
          class="text-[11px] font-bold text-[#0F4A2A] uppercase tracking-[0.2em] mb-4"
        >
          Laporan Penyaluran
        </h5>
        <p class="text-xs text-[#9CA3AF] mb-4">
          Dapatkan update penyaluran Ramadan via email mingguan.
        </p>
        <div class="flex flex-col sm:flex-row gap-2 mb-10">
          <input
            type="email"
            placeholder="Alamat email Anda"
            class="flex-grow h-11 px-4 rounded-lg border border-[#E5EBE7] bg-[#F4F7F5] text-sm focus:outline-none focus:border-[#0F4A2A] transition"
          />
          <button class="btn-primary !h-11">Berlangganan</button>
        </div>

        <!-- Contact -->
        <h5
          class="text-[11px] font-bold text-[#0F4A2A] uppercase tracking-[0.2em] mb-8"
        >
          Hubungi Kami
        </h5>
        <div class="space-y-6">
          <div class="flex items-start space-x-4">
            <i class="fas fa-map-marker-alt mt-1 text-[#F59E0B]"></i>
            <a
              href="https://maps.app.goo.gl/yN5VDNLy3SCfXJMj7"
              target="_blank"
              rel="noopener noreferrer"
              class="text-[#4A5D52] text-sm leading-relaxed hover:text-[#0F4A2A] transition"
            >
              {siteData.contact.address}
            </a>
          </div>
          <div class="flex items-center space-x-4">
            <i class="fas fa-phone text-[#F59E0B]"></i>
            <a
              href="tel:+6285174338087"
              class="text-[#4A5D52] text-sm hover:text-[#0F4A2A] transition"
            >
              +62 851-7433-8087
            </a>
          </div>
          <div class="flex items-center space-x-4">
            <i class="fas fa-envelope text-[#F59E0B]"></i>
            <a
              href={`mailto:${siteData.contact.email}`}
              class="text-[#4A5D52] text-sm hover:text-[#0F4A2A] transition"
            >
              {siteData.contact.email}
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="flex flex-col md:flex-row justify-between items-center pt-8 border-t border-[#E5EBE7] text-[10px] text-[#9CA3AF] uppercase tracking-widest font-bold"
    >
      <p>&copy; {currentYear} {siteData.fullName}</p>
      <div class="flex space-x-8 mt-4 md:mt-0">
        {
          siteData.footerLinks.map((link) => (
            <a href={link.href} class="hover:text-[#0F4A2A] transition">
              {link.label}
            </a>
          ))
        }
      </div>
    </div>
  </div>
</footer>
